<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorAccent">@color/surface</item>
        <item name="android:colorBackground">@color/backgroundColor</item>
        <item name="colorSurface">@color/surface</item>

        <!-- New MaterialComponents attributes. -->
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="scrimBackground">@color/mtrl_scrim_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="ProfileButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="ProfileRowLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ProfileTextApp">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="ProfileTextApp.tittle">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileTextApp.subTittle">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="card">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">130dp</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="card.avatar">
        <item name="cardBackgroundColor">@color/surface</item>
    </style>

    <style name="card.default">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
    </style>

    <style name="card.delete">
        <item name="cardBackgroundColor">@color/red_800</item>
    </style>

    <style name="button_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

<!--    Стили для Settings-->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="settings_layout_row">
        <item name="cardBackgroundColor">@color/secondaryColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="settings_layout_row.button">
        <item name="cardBackgroundColor">@color/primaryColor</item>
    </style>

    <style name="settings_view_image">
        <item name="android:layout_width">@dimen/settings_image_view_width</item>
        <item name="android:layout_height">@dimen/settings_image_view_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:contentDescription">@string/download_photo</item>
    </style>

    <style name="settings_view_text_main">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="settings_view_text_main.button">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="settings_view_text_secondary">
        <item name="android:textSize">13sp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="settings_view_text_secondary.edit">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:gravity">end|center</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="settings_view_switch">
        <item name="android:layout_width">@dimen/settings_aclhoo_switch_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:checked">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="trackTint">@color/selectorColor</item>
        <item name="useMaterialThemeColors">false</item>
    </style>

<!--    Стили для Recycler items-->
    <style name="recycler_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginHorizontal">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@color/surface</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="recycler_card_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/height_friend</item>
        <item name="android:textColor">@color/thirdTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="recycler_card_image_rounder">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="color">@color/surface</item>
    </style>

    <style name="recycler_card_image">
        <item name="android:layout_width">@dimen/width_friend</item>
        <item name="android:layout_height">@dimen/height_friend</item>
        <item name="civ_border_color">@color/surface</item>
<!--        <item name="android:layout_margin">@dimen/image_margin</item>-->
    </style>

    <style name="recycler_item_friend_req">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="iconGravity">textTop</item>
        <item name="backgroundTint">@color/secondaryColor</item>
    </style>

<!--    Стили для Chat-->
    <style name="chat_list_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/thirdTextColor</item>
    </style>

    <style name="chat_list_item_text.name">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:layout_toEndOf">@id/chat_friend_image</item>
    </style>

    <style name="chat_list_item_text.text">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_toEndOf">@id/chat_friend_image</item>
    </style>

    <style name="chat_list_item_text.time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>
</resources>
