<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
        >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Видимость в Alchoo"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:layout_alignParentStart="true"
                android:gravity="center_horizontal|center_vertical"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/alchoo_switcher"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:checked="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_horizontal|center_vertical"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_status_btn"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="@string/change_profile_status"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edit_status"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:autofillHints=""
                android:hint="@string/input_new_status"
                android:inputType="text"
                android:background="@color/primaryColor"
                android:textColor="@color/primaryColor"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/change_drink_btn"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="20dp"
                android:text="@string/change_profile_drink"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/edit_drink"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="@color/primaryColor"
                android:background="@color/primaryColor"
                android:hint="@string/input_new_drink"
                android:inputType="text"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <Button
            android:id="@+id/change_avatar_btn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:text="@string/change_profile_avatar"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sign_out_btn"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:text="@string/sign_out"
            android:textSize="24sp" />
    </LinearLayout>


</RelativeLayout>