<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/master_chat_layout"
        android:layout_width="wrap_content"
        android:layout_marginStart="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/helper_master">

        <TextView
            android:id="@+id/master_chat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Привет я Юра"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/master_chat_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/master_chat_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/friend_chat_layout"
        android:layout_width="wrap_content"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:background="@drawable/helper_friend"
        app:layout_constraintCircleRadius="20dp">

        <TextView
            android:id="@+id/friend_chat_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Привет я Юра"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/friend_chat_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="21:45"
            android:textColor="@color/colorBlack"
            android:gravity="end"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friend_chat_text"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>