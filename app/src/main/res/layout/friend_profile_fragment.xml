<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/friend_profile_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/avatar"
        android:src="@drawable/avatar" />

    <TextView
        android:id="@+id/friend_profile_user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@color/primaryColor"
        tools:text="Brendan Moore" />

    <TextView
        android:id="@+id/friend_profile_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        tools:text="Status" />

    <LinearLayout
        android:id="@+id/friend_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/friend_profile_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_profile_friends_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textSize="16sp"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                tools:text="20,583" />

            <TextView
                android:id="@+id/friend_profile_friends_text"
                android:layout_width="wrap_content"
                android:textColor="@color/primaryColor"
                android:layout_height="wrap_content"
                android:text="@string/friends"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/friend_profile_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/friend_profile_events_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textColor="@color/primaryColor"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="9,112,824" />

            <TextView
                android:id="@+id/friend_profile_dates_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:text="@string/dates"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/friend_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/Preferences"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/friend_drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@color/primaryColor"
        tools:text="Пивко" />

    <Button
        android:id="@+id/friend_preferences_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="@string/preferences_text"
        android:textSize="36sp" />
</LinearLayout>