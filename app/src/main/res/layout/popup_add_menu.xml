<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="520dp"
    android:background="@color/cardview_dark_background"
    android:padding="8dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:id="@+id/pop_up_dialog">

    <Button
        android:id="@+id/button_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="end"
        android:background="@drawable/round_button_interrupt_inactive"
        android:text="X"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pop_up_titel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter AlkoEvent data:"
            android:layout_marginTop="24dp"
            android:textSize="40sp"
            android:textColor="@color/primaryLightColor"
            android:textAlignment="center"
            />

        <EditText
            android:id="@+id/pop_up_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter place:"
            android:textColorHint="@color/calendar_text_grey"
            android:textSize="24sp"
            android:inputType="text"
            android:layout_marginTop="24dp"
            />

        <EditText
            android:id="@+id/pop_up_costs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter costs:"
            android:textColorHint="@color/calendar_text_grey"
            android:textSize="24sp"
            android:inputType="number"
            android:layout_marginTop="24dp"
            />

        <Button
            android:id="@+id/pop_up_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose start time"
            android:textSize="16sp"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/button_submit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@drawable/round_button_start"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>

</LinearLayout>